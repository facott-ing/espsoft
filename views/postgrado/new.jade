extends ../layout
block content

    include ../directorHead

    .container
        ul.breadcrumb
            li: a(href="/director/profile") Inicio
            li.active Registro de Postgrado
        .row
            .margin-auto
                p.lead.text-center
                    strong Registro de Postgrado
                    span.text-primary &nbsp; #{programa.nombre}
                p.lead.text-center
                    span.text-info Paso #1:
                    span.text-muted &nbsp; Informacion general del Postgrado a registrar
                .well.bs-component
                    form(method="POST", action="/postgrado/newlinfo").form-horizontal
                        input(type="hidden", name="id", value="#{programa.id}")
                        input(type="hidden", name="programa", value="#{programa.nombre}")
                        faildset
                            legend
                            .form-group
                                label(for="inputNombre", class="col-lg-2 control-label") Nombre
                                .col-lg-10

                                    .input-group
                                        span.input-group-addon
                                            i.fa.fa-mortar-board
                                        input(type="text", name="nombre", placeholder="Digite Nombre del postgrado", autocomplete="off", required, autofocus=).form-control
                                    p.lead Nombre de la titulacion que obtendra el estudiante al termino del postgrado

                            .form-group
                                label(for="inputTipo", class="col-lg-2 control-label") Tipo
                                .col-lg-10
                                    .input-group
                                        span.input-group-addon
                                            i.fa.fa-tag
                                        select#tipo(name="tipo", onchange="(isMaster(this))").form-control
                                            option(value="Especialización") Especialización
                                            option(value="Máestria") Máestria
                                            option(value="Doctorado") Doctorado
                                    p.lead Tipo de estudio al que el postgrado pertenece y tipo de titulacion que obtendra el estudiante
                            div(id="modo", style="display:none;").form-group
                                label(for="inputTipo", class="col-lg-2 control-label") Modo
                                .col-lg-10
                                    .input-group
                                        span.input-group-addon
                                            i.fa.fa-tag
                                        select(name="modo").form-control
                                            option(value="Profundización") Profundización
                                            option(value="Investigación") Investigación
                                            option(value="Mixta") Mixta
                                    p.lead modalidad Academica de la Maestria
                            .form-group
                                .col-lg-10.col-lg-offset-2
                                    a(href="/director/profile").btn.btn-default.margin-right-1
                                        i.fa.fa-times-circle
                                        | &nbsp; Cancelar
                                    button(type="submit", class="btn btn-default")
                                        | Siguiente, paso #2 &nbsp;
                                        i.fa.fa-arrow-right
                            br
                            script(type="text/javascript").
                                function isMaster(x){
                                    if(x.value=='Máestria'){
                                        document.getElementById('modo').style.display='block'
                                    }else{
                                        document.getElementById('modo').style.display='none'
                                    }
                                }
