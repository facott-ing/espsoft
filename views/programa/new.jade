extends ../layout
block content
    include ../adminHead
    .container
        ul.breadcrumb
            li: a(href="/administrador/profile") Inicio
            li.active Registro de Programas
        .row
            .margin-auto
                p.lead.text-center
                    strong Registro de Programas
                p.lead.text-center
                    span.text-muted &nbsp; Informacion general del Programa a registrar
                .well.bs-component
                    form(method="POST", action="/programa").form-horizontal
                        faildset
                            legend
                            .form-group
                                label(for="inputNombre", class="col-lg-2 control-label") Nombre
                                .col-lg-10

                                    .input-group
                                        span.input-group-addon
                                            i.fa.fa-bookmark
                                        input(type="text", name="nombre", placeholder="Digite Nombre del postgrado", autocomplete="off", required, autofocus=).form-control
                                    p.text-muted Nombre del departamento, programa o carrera academica, que ofertara los postgrados
                            .form-group
                                .col-lg-10.col-lg-offset-2
                                    a(href="/administrador/profile").btn.btn-default.margin-right-1
                                        i.fa.fa-times-circle
                                        | &nbsp; Cancelar
                                    button(type="submit", class="btn btn-primary")
                                        i.fa.fa-plus
                                        | &nbsp; Registrar Programa